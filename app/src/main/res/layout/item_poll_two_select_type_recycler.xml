<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="22dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/two_select_type_const"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_yellow_color">

        <TextView
            android:id="@+id/two_select_type_poll_title"
            style="@style/Text.boldFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="47dp"
            android:text="당신은 이 앱은 어떤가요??"
            android:textColor="@color/white"
            android:textSize="17sp"
            app:layout_constraintLeft_toLeftOf="@id/two_select_type_const"
            app:layout_constraintRight_toRightOf="@id/two_select_type_const"
            app:layout_constraintTop_toTopOf="@id/two_select_type_const" />

        <TextView
            android:id="@+id/two_select_type_number_of_voter"
            style="@style/Text.boldFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="323,231 "
            android:textColor="@color/white"
            android:textSize="10sp"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toLeftOf="@id/two_select_type_const"
            app:layout_constraintRight_toLeftOf="@id/two_select_type_number_of_voter_text"
            app:layout_constraintTop_toBottomOf="@id/two_select_type_poll_title" />

        <TextView
            android:id="@+id/two_select_type_number_of_voter_text"
            style="@style/Text.boldFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="명이 투표를 했습니다."
            android:textColor="@color/white"
            android:textSize="10sp"
            app:layout_constraintLeft_toRightOf="@id/two_select_type_number_of_voter"
            app:layout_constraintRight_toRightOf="@id/two_select_type_const"
            app:layout_constraintTop_toBottomOf="@id/two_select_type_poll_title" />

        <androidx.cardview.widget.CardView
            android:id="@+id/two_select_type_first_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="#99FFFFFF"
            app:cardCornerRadius="15dp"
            app:layout_constraintTop_toBottomOf="@id/two_select_type_number_of_voter_text">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/two_select_type_first_card_const"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    style="@style/Text.boldFont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="18dp"
                    android:layout_marginLeft="25dp"
                    android:text="괜찮아요! 괜찮아요! 괜찮아요! 괜찮아요! 괜찮아요! 괜찮아요! ddddd"
                    android:ems="20"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@id/two_select_type_first_card_const"
                    app:layout_constraintLeft_toLeftOf="@id/two_select_type_first_card_const"
                    app:layout_constraintTop_toTopOf="@id/two_select_type_first_card_const" />

                <TextView
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_marginRight="15dp"
                    android:backgroundTint="@color/white"
                    android:background="@drawable/ic_baseline_check_circle_outline_24"
                    app:layout_constraintBottom_toBottomOf="@id/two_select_type_first_card_const"
                    app:layout_constraintRight_toRightOf="@id/two_select_type_first_card_const"
                    app:layout_constraintTop_toTopOf="@id/two_select_type_first_card_const" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/two_select_type_second_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="#99FFFFFF"
            app:cardCornerRadius="15dp"
            app:layout_constraintTop_toBottomOf="@id/two_select_type_first_card">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/two_select_type_second_card_const"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    style="@style/Text.boldFont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="18dp"
                    android:layout_marginLeft="25dp"
                    android:text="별로에요.."
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@id/two_select_type_second_card_const"
                    app:layout_constraintLeft_toLeftOf="@id/two_select_type_second_card_const"
                    app:layout_constraintTop_toTopOf="@id/two_select_type_second_card_const" />

                <TextView
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/ic_baseline_check_circle_24"
                    app:layout_constraintBottom_toBottomOf="@id/two_select_type_second_card_const"
                    app:layout_constraintRight_toRightOf="@id/two_select_type_second_card_const"
                    app:layout_constraintTop_toTopOf="@id/two_select_type_second_card_const" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/two_select_type_second_card"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="33dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="10dp"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:text="2021.11.01 ~ 2021.11.29"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>